@model DeedSimple.Models.Seller.ConfirmDeletePropertyModel

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.TagLine)</h4>
    <hr/>
    <img src="@Html.Action("Index", "Image", new {id = Model.MainImageId})"/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TagLine)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TagLine)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MainImageId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MainImageId)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Cancel and return to List", "Index")
        </div>
    }
</div>
