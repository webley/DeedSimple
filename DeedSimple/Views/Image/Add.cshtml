@model DeedSimple.Models.Seller.AddPropertyImageModel


@using (Html.BeginForm("Add", "Image", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Add an image to your property listing</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.PropertyId)

        <div class="form-group">
            @Html.LabelFor(model => model.Image, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.LabelFor(m => m.Image)
                @Html.TextBoxFor(m => m.Image, new {type = "file"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Caption, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.LabelFor(m => m.Caption)
                @Html.TextBoxFor(m => m.Caption)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to property", "Edit", "Seller", new { propertyId = Model.PropertyId}, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
